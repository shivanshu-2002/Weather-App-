<!DOCTYPE html>
<html lang="en">
<head>
         {{>links}}
</head>
<body>
      {{>header}}
      <!-- Main section -->
    <div class="container-fluid main_header">
        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                    <div class="main_content">
                        <form  class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter your City Name" autocomplete="off">
                            <input type="submit" value="search" id="submitbtn">
                        </form>
                    </div>

                    <div class="tempinformation">
                          <div class="top_layer">
                             <p id="day">Tuesday</p>
                             <p id="today_date">13 OCT</p>
                          </div>
                          <div class="main_layer">
                            <p id="city_name">Get Output Here</p>
                             <div class="middle_layer data_hide">
                                <p id="temp"><span id="weatherspan">0</span><sup>o</sup>C</p>
                                <p id="temp_status"><i class="fas fa-cloud" aria-hidden="true"></i></p>
                             </div>
                          </div>
                    </div>
            </div>
        </div>
    </div>

    <!-- Footer Section -->
  {{>footer}}
{{!-- adding the javascript file --}}
  <script src="./js/weather.js"></script>
</body>
</html>